<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_shoot_shooting_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/activity_shoot_shooting_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/activity_shoot_shooting_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/switch_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/activity_shoot_shooting_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="轻触拍照，长按摄像"
            android:textColor="@color/withe"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/activity_shoot_shooting_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp">

            <ImageView
                android:id="@+id/activity_shoot_shooting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:src="@mipmap/arrows_down_white" />

            <com.jeckliu.mediarecorder.view.ShootIconView
                android:id="@+id/activity_shoot_shooting_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:innerOriginalRadius="28dp"
                app:innerPaintColor="@color/withe"
                app:innerScaleRadius="21dp"
                app:outerOriginalRadius="37dp"
                app:outerPaintColor="@color/gray"
                app:outerProgressPaintColor="@color/a_60d7ed"
                app:outerScaleRadius="61dp"
                app:progressWidth="7dp"
                app:shootMaxTime="10000"
                app:shootMinTime="1000" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/activity_shoot_completed_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <VideoView
            android:id="@+id/activity_shoot_completed_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/activity_shoot_completed_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/activity_shoot_completed_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/shoot_resume" />

        <ImageView
            android:id="@+id/activity_shoot_completed_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="49dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/shoot_confirm" />

    </RelativeLayout>

</FrameLayout>